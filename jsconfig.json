{
  "compilerOptions": {
    "target": "es2020",
    "baseUrl": ".",
    "paths": {
      "@component/*": ["src/components/*"],
      "@style/*": ["src/styles/*"],
      "@util/*": ["src/utils/*"]
    },
    "plugins": [
      {
        "name": "next"
      }
    ]
  },
  "include": ["**/*.js", "**/*.jsx"],
  "exclude": ["node_modules"]
}
